<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">                <!--<Module_Name>::<Permission_Name>-->
                <resource id="AccessControlList_Example::parent" title="ACL Example Menu" sortOrder="50">
                    <resource id="AccessControlList_Example::view" title="View Demo Page" sortOrder="10" />
                    <resource id="AccessControlList_Example::save" title="Save/Update Items" sortOrder="20" />
                    <resource id="AccessControlList_Example::delete" title="Delete Items" sortOrder="30" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>


<!-- 
🏠 Backend

Magento_Backend::admin → Root resource (all admin access).

Magento_Backend::content → Content section.

Magento_Backend::stores → Stores configuration.

