<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="employees" resource="default" engine="innodb" comment="Employees Table">
        <column name="employee_id" xsi:type="int" unsigned="true" nullable="false" identity="true" comment="Employee ID"/>
        <column name="name" xsi:type="varchar" nullable="false" length="255" comment="Employee Name"/>
        <column name="email" xsi:type="varchar" nullable="false" length="255" comment="Employee Email"/>
        <column name="position" xsi:type="varchar" nullable="true" length="255" comment="Employee Position"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>
    </table>
</schema>
