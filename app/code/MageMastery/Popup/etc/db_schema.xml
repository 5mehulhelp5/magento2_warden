<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
        <table name="MageMastery" resource="default" engine="innodb" comment="Magemastery popup">
                <column xsi:type="smallint" name="popup_id" unsigned="false" nullable="false" identity="true" comment="Popup ID"/>
                <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Popup Name"/>
                <column xsi:type="mediumtext" name="content" nullable="true" comment="Popup Content"/>
                <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Popup Creation Time"/>
                <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Popup Modification Time"/>
                <column xsi:type="smallint" name="is_active" unsigned="false" nullable="false" identity="false" default="1" comment="Is Popup Active"/>
                <column xsi:type="smallint" name="timeout" unsigned="false" nullable="false" identity="false" default="1" comment="Popup Timeout"/>
                <constraint xsi:type="primary" referenceId="PRIMARY">
                        <column name="popup_id"/>
                </constraint>
                <index referenceId="MageMastery_NAME_CONTENT" indexType="fulltext">
                        <column name="name"/>
                        <column name="content"/>
                </index>
        </table>
</schema>

