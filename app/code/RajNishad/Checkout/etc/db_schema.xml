<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="default" engine="innodb" comment="Quote Table">
        <column xsi:type="varchar" name="contact_firstname" nullable="true" length="255" comment="Contact First Name"/>
        <column xsi:type="varchar" name="contact_lastname" nullable="true" length="255" comment="Contact Last Name"/>
        <column xsi:type="varchar" name="contact_email" nullable="true" length="255" comment="Contact Email"/>
        <column xsi:type="varchar" name="contact_telephone" nullable="true" length="20" comment="Contact Telephone"/>
    </table>
    <table name="sales_order" resource="default" engine="innodb" comment="Sales Order Table">
        <column xsi:type="varchar" name="contact_firstname" nullable="true" length="255" comment="Contact First Name"/>
        <column xsi:type="varchar" name="contact_lastname" nullable="true" length="255" comment="Contact Last Name"/>
        <column xsi:type="varchar" name="contact_email" nullable="true" length="255" comment="Contact Email"/>
        <column xsi:type="varchar" name="contact_telephone" nullable="true" length="20" comment="Contact Telephone"/>
    </table>
</schema>
