<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <columns name="sales_extension_orders_columns">
        <column name="entity_id">
            <settings>
                <label translate="true">Order ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="customer_name">
            <settings>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <label translate="true">Created At</label>
                <filter>dateRange</filter>
            </settings>
        </column>
        <column name="grand_total">
            <settings>
                <label translate="true">Grand Total</label>
            </settings>
        </column>
    </columns>

    <listingToolbar name="listing_top">
        <paging name="listing_paging"/>
        <filters name="listing_filters"/>
    </listingToolbar>

    <dataSource name="sales_extension_orders_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                MagentoBackendProjects\SalesExtension\Ui\Component\Listing\DataProvider
            </argument>
            <argument name="name" xsi:type="string">sales_extension_orders_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
    </dataSource>

    <exportButton name="export_button"/>
</listing>
